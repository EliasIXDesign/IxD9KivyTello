#: import Joystick joystick

<Button,ToggleButton>:
    background_color: 0.0, 0.0, 0.0, 0.2

<DragableJoystick>

<CoverVideo>

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Mission 1'
            on_release: root.start_mission
        Button:
            text: 'Mission 2'
            on_release: root.start_mission
        Button:
            text: 'Mission 3'
            on_release: root.start_mission
        Button:
            text: 'Mission 4'
            on_release: root.start_mission

<MissionScreen>:
    id: mission_screen
    BoxLayout:
        id: box_layout
        orientation: 'vertical'
        CoverVideo:
            id: video
            drone: app.drone
            text: 'Video here'
        BoxLayout:
            orientation: 'horizontal'
            Joystick:
                id: pad_left
            Joystick:
                id: pad_right
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: takeoff
                text: 'Takeoff/Land'
            Button:
                id: rotcw
                text: 'Rotate CW'
            Button:
                id: rotccw
                text: 'Rotate CCW'
            Button:
                id: quit
                text: 'Quit'
        Button:
            text: 'Return'
            on_release: root.stop_mission
